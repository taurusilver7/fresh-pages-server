{{!-- Stories Index Page --}}

<h2>Stories</h2>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- todo: editIcon --}}
                    {{{editIcon user ../user _id }}}
                </div>

                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 120)}}</p>
                    <br>
                    <div class="chip">
                        <img src={{user.image}} alt="author">
                        <a href="/stories/user/{{user._id}}">{{user.firstName}}</a>
                    </div>
                </div>

                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories to display.</p>
    {{/each}}
</div>