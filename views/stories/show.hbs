<div class="row">
    <div class="col s12 m9">
        <h3>{{story.title}}<small>{{{editIcon story.user user story._id false}}}</small></h3>
        <div class="card story">
            <div class="card-container">
                <span class="card-title">{{formatDate date 'MMMM Do YYYYY, h:mm:ss a'}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>

    <div class="col s12 m3">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" alt="profile-pic" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">More From {{story.user.givenName}}</a>
            </div>
        </div>
    </div>
</div>